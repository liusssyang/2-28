<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/ll_content_bottom_sheet"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#F8F8F8"
    app:behavior_hideable="true"
    app:behavior_peekHeight="250dp"
    app:layout_behavior="@string/bottom_sheet_behavior">
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center"
        android:id="@+id/onebar"
        android:orientation="horizontal"
        >
        <RelativeLayout
            android:layout_margin="15dp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content">
            <RelativeLayout
                android:id="@+id/pic_lay"
                android:padding="13dp"
                android:layout_width="50dp"
                android:background="@drawable/background_white2"
                android:layout_height="50dp">
                <TextView
                    android:id="@+id/pic"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center"
                    android:background="@drawable/pic"/>
            </RelativeLayout>
            <TextView
                android:layout_width="50dp"
                android:layout_height="20dp"
                android:id="@+id/pic_text"
                android:background="#00000000"
                android:layout_marginTop="5dp"
                android:layout_below="@+id/pic_lay"
                android:gravity="center"
                android:text="图片"/>
        </RelativeLayout>
        <RelativeLayout
            android:layout_margin="15dp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content">
            <RelativeLayout
                android:id="@+id/vio_lay"
                android:padding="13dp"
                android:layout_width="50dp"
                android:background="@drawable/background_white2"
                android:layout_height="50dp">
                <TextView
                    android:id="@+id/vio"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center"
                    android:background="@drawable/voice"/>
            </RelativeLayout>
            <TextView
                android:layout_width="50dp"
                android:layout_height="20dp"
                android:id="@+id/vio_text"
                android:background="#00000000"
                android:layout_marginTop="5dp"
                android:layout_below="@+id/vio_lay"
                android:gravity="center"
                android:text="语音"/>
        </RelativeLayout>
        <RelativeLayout
            android:layout_margin="15dp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content">
            <RelativeLayout
                android:id="@+id/cam_lay"
                android:padding="13dp"
                android:layout_width="50dp"
                android:background="@drawable/background_white2"
                android:layout_height="50dp">
                <TextView
                    android:id="@+id/cam"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center"
                    android:background="@drawable/cam"/>
            </RelativeLayout>
            <TextView
                android:layout_width="50dp"
                android:layout_height="20dp"
                android:id="@+id/cam_text"
                android:background="#00000000"
                android:layout_marginTop="5dp"
                android:layout_below="@+id/cam_lay"
                android:gravity="center"
                android:text="拍照"/>
        </RelativeLayout>
        <RelativeLayout
            android:layout_margin="15dp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content">
            <RelativeLayout
                android:id="@+id/vid_lay"
                android:padding="13dp"
                android:layout_width="50dp"
                android:background="@drawable/background_white2"
                android:layout_height="50dp">
                <TextView
                    android:id="@+id/vid"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center"
                    android:background="@drawable/vid"/>
            </RelativeLayout>
            <TextView
                android:layout_width="50dp"
                android:layout_height="20dp"
                android:id="@+id/vid_text"
                android:background="#00000000"
                android:layout_marginTop="5dp"
                android:layout_below="@+id/vid_lay"
                android:gravity="center"
                android:text="视频"/>
        </RelativeLayout>
    </LinearLayout>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center"
        android:id="@+id/twobar"
        android:layout_below="@+id/onebar"
        android:orientation="horizontal">
        <RelativeLayout
            android:layout_margin="15dp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content">
            <RelativeLayout
                android:id="@+id/file__lay"
                android:padding="13dp"
                android:layout_width="50dp"
                android:background="@drawable/background_white2"
                android:layout_height="50dp">
                <TextView
                    android:id="@+id/file_"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center"
                    android:background="@drawable/file"/>
            </RelativeLayout>
            <TextView
                android:layout_width="50dp"
                android:layout_height="20dp"
                android:id="@+id/file_text"
                android:background="#00000000"
                android:layout_marginTop="5dp"
                android:layout_below="@+id/file__lay"
                android:gravity="center"
                android:text="文件"/>
        </RelativeLayout>
        <RelativeLayout
            android:layout_margin="15dp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content">
            <RelativeLayout
                android:id="@+id/pos_lay"
                android:padding="13dp"
                android:layout_width="50dp"
                android:background="@drawable/background_white2"
                android:layout_height="50dp">
                <TextView
                    android:id="@+id/pos"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center"
                    android:background="@drawable/pos"/>
            </RelativeLayout>
            <TextView
                android:layout_width="50dp"
                android:layout_height="20dp"
                android:id="@+id/pos_text"
                android:background="#00000000"
                android:layout_marginTop="5dp"
                android:layout_below="@+id/pos_lay"
                android:gravity="center"
                android:text="位置"/>
        </RelativeLayout>
        <RelativeLayout
            android:layout_margin="15dp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content">
            <RelativeLayout
                android:id="@+id/red_lay"
                android:padding="13dp"
                android:layout_width="50dp"
                android:background="@drawable/background_white2"
                android:layout_height="50dp">
                <TextView
                    android:id="@+id/red"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center"
                    android:background="@drawable/red"/>
            </RelativeLayout>
            <TextView
                android:layout_width="50dp"
                android:layout_height="20dp"
                android:id="@+id/red_text"
                android:background="#00000000"
                android:layout_marginTop="5dp"
                android:layout_below="@+id/red_lay"
                android:gravity="center"
                android:text="红包"/>
        </RelativeLayout>
        <RelativeLayout
            android:layout_margin="15dp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content">
            <RelativeLayout
                android:id="@+id/sto_lay"
                android:padding="13dp"
                android:layout_width="50dp"
                android:background="@drawable/background_white2"
                android:layout_height="50dp">
                <TextView
                    android:id="@+id/sto"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center"
                    android:background="@drawable/sto"/>
            </RelativeLayout>
            <TextView
                android:layout_width="50dp"
                android:layout_height="20dp"
                android:id="@+id/sto_text"
                android:background="#00000000"
                android:layout_marginTop="5dp"
                android:layout_below="@+id/sto_lay"
                android:gravity="center"
                android:text="收藏"/>
        </RelativeLayout>

    </LinearLayout>
</RelativeLayout>